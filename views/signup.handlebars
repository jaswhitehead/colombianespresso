<body>
    <form class="clearfix mb-4" action="POST">
        <div class="form-group">
            <h4>Create Your User:</h4>
            <br>
            <label for="username">
                <h6><strong>Username:</strong></h6>
            </label>
            <input type="text" id="username" class="form-control" aria-describedby="example-text"
                placeholder="ex. User123">
        </div>
        <div class="form-group">
            <label for="user_password">
                <h6><strong>Password:</strong></h6>
            </label>
            <textarea class="form-control" id="password" aria-describedby="example-description"
                placeholder="Enter Password"></textarea>
        </div>
        <button id="submit" class="btn btn-primary float-right">Submit</button>
    </form>
</body>

