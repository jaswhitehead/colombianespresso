  <div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="head-font">Welcome Back to the Coffee House!</h2>
        </br>
         <h4 class="head-font">Share Your Thoughts:</h4>
        <form class="clearfix mb-4" action="/api/post" method="POST">
          <div class="form-group">
            <br><br>
            <h6><strong>Enter Title:</strong></h6>
            <input type="text" id="post-title" class="form-control" aria-describedby="example-text" placeholder="Enter Post Title Here">
          </div>
          <div class="form-group">
            <h6><strong>Enter Post:</strong></h6>
            <input class="form-control" id="post-body" aria-describedby="example-description" placeholder="What's On Your Mind?">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3 class="head-font">News Feed:</h3>
        <ul id="example-list" class="list-group">
          {{#each post}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a class="title-font" href="post/{{this.id}}">{{this.post_title}}</a>
            <p class="other-font">{{this.post_body}}</p>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
